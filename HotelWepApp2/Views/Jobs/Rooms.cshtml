@using System.Linq
@model IEnumerable<HotelWepApp2.ViewModel.RoomViewModel>


@{
    ViewData["Title"] = "Overview List";
}

<h2>Overview List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room number:</th>
            <th>Adults checked in:</th>
            <th>Children checked in:</th>
        </tr>
    </thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdultBuffetCheckInCounter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KidBuffetCheckInCounter)
            </td>
        </tr>
    }
</tbody>
</table>